# Twilio Configuration for Emergency SMS Alerts
# Copy this file to .env and fill in your actual Twilio credentials

# Twilio Account SID (found in your Twilio Console Dashboard)
REACT_APP_TWILIO_ACCOUNT_SID=your_account_sid_here

# Twilio Auth Token (found in your Twilio Console Dashboard)
REACT_APP_TWILIO_AUTH_TOKEN=your_auth_token_here

# Your Twilio Phone Number (must be verified and SMS-enabled)
REACT_APP_TWILIO_PHONE_NUMBER=+1234567890

# API Endpoint for backend SMS service (recommended for production)
REACT_APP_API_URL=http://localhost:8081/api

# Application Settings
REACT_APP_HOSPITAL_NAME=SmartMed Hospital
REACT_APP_EMERGENCY_HOTLINE=+94 11 234 5678

# Development Mode Settings
NODE_ENV=development